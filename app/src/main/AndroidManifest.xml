<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kr.co.aroundthetruck.admin">

    <application
        android:name="kr.co.aroundthetruck.admin.AroundTheTruckApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="kr.co.aroundthetruck.admin.activity.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="kr.co.aroundthetruck.admin.activity.SignUpActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" />
        <activity
            android:name="kr.co.aroundthetruck.admin.activity.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" />
    </application>

</manifest>
