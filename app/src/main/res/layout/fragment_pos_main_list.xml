        android:layout_height="wrap_content"
        android:id="@+id/fragment_pos_main_list_button_remove"
        android:background="@android:drawable/presence_busy" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/fragment_pos_main_list_textview_menuname" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/fragment_pos_main_list_textview_price" />
</LinearLayout>