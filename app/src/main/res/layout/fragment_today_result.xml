<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"></LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="kr.co.aroundthetruck.admin.fragment.TodayResultFragment"
        android:background="#fff1f0f0">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView" />

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fragment_today_result_background_imageview"
                    android:src="@drawable/calculate_background" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent">

                        <TextView
                            android:id="@+id/fragment_today_result_tv_date"
                            android:layout_width="450dp"
                            android:layout_height="120dp"
                            style="?android:attr/textAppearanceLarge"
                            tools:text="2014/01/01 수요일"
                            android:layout_marginTop="62dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="false"
                            android:layout_marginLeft="68.5dp" />

                        <TextView
                            android:id="@+id/fragment_today_result_tv_working_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="?android:attr/textAppearanceLarge"
                            android:text="오전 10:30 - 오후 7:30"
                            android:layout_alignBottom="@+id/fragment_today_result_tv_total_customer_count"
                            android:layout_alignStart="@+id/fragment_today_result_tv_date"
                            android:layout_below="@+id/fragment_today_result_tv_date"
                            android:layout_alignEnd="@+id/fragment_today_result_tv_date"
                            android:layout_marginTop="47.5dp"
                            android:layout_marginLeft="68.5dp" />

                        <TextView
                            android:id="@+id/fragment_today_result_tv_total_sales"
                            android:layout_width="437dp"
                            android:layout_height="100dp"
                            style="?android:attr/textAppearanceLarge"
                            android:text="400,000원"
                            android:layout_below="@+id/fragment_today_result_tv_working_time"
                            android:layout_alignStart="@+id/fragment_today_result_tv_working_time"
                            android:layout_marginTop="122dp"
                            android:gravity="bottom|right" />

                        <TextView
                            android:id="@+id/fragment_today_result_tv_cost_per_person"
                            android:layout_width="437dp"
                            android:layout_height="100dp"
                            android:text="4,000원"
                            style="?android:attr/textAppearanceLarge"
                            android:layout_alignBottom="@+id/fragment_today_result_linearlayout1"
                            android:layout_alignStart="@+id/fragment_today_result_tv_total_sales"
                            android:layout_marginTop="100dp"
                            android:gravity="bottom|right" />

                        <com.github.mikephil.charting.charts.BarChart
                            android:id="@+id/fragment_today_result_bc_age"
                            android:layout_width="450dp"
                            android:layout_height="300dp"
                            android:layout_marginTop="160dp"
                            android:layout_marginLeft="60dp" />

                        <com.github.mikephil.charting.charts.PieChart
                            android:id="@+id/fragment_today_result_pc_sex"
                            android:layout_width="250dp"
                            android:layout_height="250dp" />

                        <TextView
                            android:id="@+id/fragment_today_result_tv_total_customer_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="?android:attr/textAppearanceLarge"
                            android:text="400명"
                            android:layout_toStartOf="@+id/fragment_today_result_tv_date"
                            android:layout_below="@+id/fragment_today_result_tv_date" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/fragment_today_result_lc_time"
                            android:layout_width="450dp"
                            android:layout_height="300dp" />

                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>
        </ScrollView>


